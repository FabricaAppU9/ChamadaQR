<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.fabricaapp.chamadaqr.activity.TelaDetalhesEvento">


    <ImageView
        android:id="@+id/imagemEvento"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagemEvento"
        android:padding="3dp"
        android:textSize="25sp"
        android:text="@string/lblNomeEvento"
/>

    <TextView
        android:id="@+id/txtNomeEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagemEvento"
        android:padding="3dp"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNomeEvento"
        android:padding="3dp"
        android:textSize="25sp"
        android:text="@string/lblInicioEvento"/>

    <TextView
        android:id="@+id/inicioEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNomeEvento"
        android:padding="3dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inicioEvento"
        android:padding="3dp"
        android:textSize="25sp"
        android:text="@string/lblTerminoEvento"/>

    <TextView
        android:id="@+id/terminoEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inicioEvento"
        android:padding="3dp"
        android:layout_marginLeft="95dp"
        android:layout_marginStart="95dp"
        android:textSize="25sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/terminoEvento"
        android:layout_marginTop="210dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/btnAceesarCamera"
        android:text="@string/acessarCamera"/>
</RelativeLayout>
